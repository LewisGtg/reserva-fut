{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "baseUrl": "./src",
    "paths": {
      "src/*": ["src/*"],
      "@common/*": ["common/*"],
      "@database/*": ["database/*"],
      "@modules/*": ["modules/*"],
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "prisma/*.ts"],
  "exclude": ["node_modules", "dist"]
}
